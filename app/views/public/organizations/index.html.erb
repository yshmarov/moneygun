<% content_for :title, t(".title") %>

<%= render "organizations/tabs", active_tab: :browse_organizations do %>
  <%= render PageComponent.new(title: t("public.organizations.index.title"), full_width: true) do %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% @organizations.each do |organization| %>
        <%= render "public/organizations/organization", organization: organization %>
      <% end %>
    </div>
  <% end %>
<% end %>
