<% if organizations.any? %>
  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th><%= Organization.human_attribute_name(:name) %></th>
          <th><%= Organization.human_attribute_name(:privacy_setting) %></th>
          <th>Members</th>
          <th><%= Organization.human_attribute_name(:created_at) %></th>
          <th></th>
        </tr>
      </thead>

      <tbody id="organizations">
        <% organizations.each do |organization| %>
          <tr
            class="cursor-pointer"
            data-controller="visitable"
            data-action="click->visitable#visit"
            data-url="<%= organization.participant?(current_user) ? organization_dashboard_path(organization) : organization_path(organization) %>">
            <td>
              <div class="flex items-center gap-2">
                <%= organization_avatar(organization) %>

                <span class="font-medium">
                  <%= highlight(organization.name, params[:query]) %>
                </span>
              </div>
            </td>

            <td>
              <span class="badge badge-xs badge-soft">
                <%= privacy_setting_options(organization.privacy_setting)[:display_text] %>
              </span>
            </td>

            <td><%= render "user/organizations/users_list", organization: %></td>

            <td
              data-label="<%= Organization.human_attribute_name(:created_at) %>">
              <%= organization.created_at.strftime("%B %d, %Y") %>
            </td>

            <td>
              <%= render "user/organizations/membership_actions", organization: organization %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= render "shared/pagination", pagy: @pagy if @pagy.present? %>
<% else %>
  <%= render EmptyStateComponent.new %>
<% end %>
