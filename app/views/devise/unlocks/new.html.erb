<%= render PageComponent.new(title: t("devise.views.unlocks.new.title"), full_width: false) do %>
  <%= render "devise/shared/oauth_links" %>

  <div class="divider"><%= t("devise.views.shared.links.oauth_separator") %></div>

  <%= simple_form_for resource, as: resource_name, url: unlock_path(resource_name), method: :post, html: { class: "space-y-4" } do |f| %>
    <%= render "shared/errors", object: resource %>

    <%= f.input :email,
                 label: t("devise.views.unlocks.new.email_label"),
                 placeholder: t("devise.views.unlocks.new.email_placeholder"),
                 hint: t("devise.views.unlocks.new.email_help"),
                 input_html: {
                   autofocus: true,
                   autocomplete: "email"
                 } %>

    <div class="pt-2"><%= f.button :submit, t("devise.views.unlocks.new.submit"), class: "btn-primary btn-block" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
