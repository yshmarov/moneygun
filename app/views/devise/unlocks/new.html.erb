<%= render PageComponent.new(title: "Resend unlock instructions") do %>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <%= render "shared/errors", object: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="">
      <%= f.submit "Resend unlock instructions", class: "du-btn du-btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

<% end %>
