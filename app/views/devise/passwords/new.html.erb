<%= render PageComponent.new(title: t("devise.views.passwords.new.title"), full_width: false) do %>
  <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), method: :post, html: { class: "space-y-4" } do |f| %>
    <%= render "shared/errors", object: resource %>

    <%= f.input :email,
                 label: t("devise.views.passwords.new.email_label"),
                 placeholder: t("devise.views.passwords.new.email_placeholder"),
                 hint: t("devise.views.passwords.new.email_help"),
                 input_html: {
                   autofocus: true,
                   autocomplete: "email"
                 } %>

    <div class="pt-2">
      <%= f.button :submit, t("devise.views.passwords.new.submit"), class: "btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
