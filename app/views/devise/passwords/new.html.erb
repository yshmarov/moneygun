<%= render PageComponent.new(title: t("devise.views.passwords.new.title"), full_width: false) do %>
  <%= form_with model: resource, as: resource_name, url: password_path(resource_name), method: :post, class: "space-y-4" do |f| %>
    <%= render "shared/errors", object: resource %>

    <div class="space-y-1">
      <%= f.label :email, t("devise.views.passwords.new.email_label"), class: "block text-sm font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full", placeholder: t("devise.views.passwords.new.email_placeholder") %>
      <p class="text-xs"><%= t("devise.views.passwords.new.email_help") %></p>
    </div>

    <div class="pt-2">
      <%= f.submit t("devise.views.passwords.new.submit"), class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
