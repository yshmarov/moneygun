<%= render PageComponent.new(title: t("devise.views.passwords.edit.title"), full_width: false) do %>
  <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), method: :put, html: { class: "space-y-4" } do |f| %>
    <%= render "shared/errors", object: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.input :password,
                label: t("devise.views.passwords.edit.password_label"),
                placeholder: t("devise.views.passwords.edit.password_placeholder"),
                hint: (@minimum_password_length ? t("devise.views.passwords.edit.password_minimum", count: @minimum_password_length) : nil),
                input_html: {
                  autofocus: true,
                  autocomplete: "new-password"
                } %>

    <%= f.input :password_confirmation,
                label: t("devise.views.passwords.edit.password_confirmation_label"),
                placeholder: t("devise.views.passwords.edit.password_confirmation_placeholder"),
                input_html: {
                  autocomplete: "new-password"
                } %>

    <div class="pt-2">
      <%= f.button :submit, t("devise.views.passwords.edit.submit"), class: "btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
