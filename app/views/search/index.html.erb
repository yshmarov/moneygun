<%= modal close_on_submit: false do %>
  <div class="flex flex-col gap-4">
    <%= form_with url: search_path, method: :get, data: { turbo_frame: :results } do |form| %>
      <%= form.search_field :query, autofocus: true, oninput: "this.form.requestSubmit()", class: "form-input", placeholder: "Search..." %>
    <% end %>

    <%= turbo_frame_tag :results do %>
      <% if @organizations.present? %>
        <ul class="du-list bg-base-100 rounded-box shadow-md">
          <li class="p-4 pb-2 text-xs opacity-60 tracking-wide">Organizations</li>
          <% @organizations.each do |organization| %>
            <li>
              <%= link_to organization_path(organization), data: { turbo_frame: :_top }, class: "du-list-row flex items-center gap-3 p-3 hover:bg-base-200 transition-colors" do %>
                <%= organization_avatar(organization) %>
                <div class="flex-1">
                  <div class="font-medium">
                    <%= highlight(organization.name, params[:query]) %>
                  </div>
                  <% if organization.respond_to?(:description) && organization.description.present? %>
                    <div class="text-xs uppercase font-semibold opacity-60">
                      <%= truncate(organization.description, length: 50) %>
                    </div>
                  <% elsif organization.respond_to?(:category) && organization.category.present? %>
                    <div class="text-xs uppercase font-semibold opacity-60">
                      <%= organization.category %>
                    </div>
                  <% end %>
                </div>
                <%= inline_svg_tag "svg/chevron-right.svg", class: "size-4" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% elsif params[:query].present? %>
        <div class="bg-base-100 rounded-box shadow-md p-6 text-center">
          <div class="text-base-content/60 mb-2">
            <%= inline_svg_tag "svg/magnifying-glass.svg", class: "size-12 mx-auto mb-2" %>
          </div>
          <div class="font-medium text-base-content/80">No results found</div>
          <div class="text-sm text-base-content/60 mt-1">
            Try adjusting your search terms
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
