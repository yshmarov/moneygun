<% flash.each do |type, message| %>
  <% if message.is_a?(String) %>
    <%= tag.div message,
                class: [
                  "alert",
                  "mx-4",
                  "mt-2 rounded-xl p-2 shadow",
                  "cursor-pointer break-normal font-medium",
                  flash_style(type)
                ],
                role: "alert",
                aria: { live: "polite" },
                data: {
                  controller: "auto-remove element-remove",
                  auto_remove_delay_value: 5000,
                  action: "click->element-remove#click",
                  turbo_temporary: true
                } %>
  <% end %>
<% end %>
