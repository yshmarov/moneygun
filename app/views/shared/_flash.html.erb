<% flash.each do |type, message| %>
  <% if message.is_a?(String) %>
    <%= tag.div message,
                class: "du-alert #{flash_style(type)} mx-2 mt-2 opacity-90 cursor-pointer break-normal",
                data: { 
                  controller: "auto-remove element-remove",
                  auto_remove_delay_value: 2000,
                  action: "click->element-remove#click",
                  turbo_temporary: true
                } %>
  <% end %>
<% end %>