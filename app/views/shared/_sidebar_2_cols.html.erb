<%# Mobile sidebar backdrop %>
<div data-mobile-sidebar-target="backdrop" class="lg:hidden fixed inset-0 bg-gray-800/50 z-40 hidden" data-action="click->mobile-sidebar#close"></div>

<aside data-mobile-sidebar-target="sidebar" class="fixed lg:relative border-r border-gray-300 bg-white h-dvh -translate-x-full lg:translate-x-0 transition-transform duration-300 z-50 flex flex-col overflow-y-auto">
  <%# Widescreen sidebar top %>
  <%# change the nav flex-col/flex-row %>
  <nav class="flex flex-row flex-grow">
    <div class="flex flex-col max-h-screen overflow-y-auto p-2 space-y-4 border-r">
      <%= link_to root_path, class: "flex items-center justify-center" do %>
        <%= image_tag "logo.png", alt: "logo", class: "size-8" %>
      <% end %>

      <%= active_link_to organizations_path, active: :exclusive, class_active: "bg-gray-400", class: "aspect-square flex justify-center items-center text-sm rounded-md border-4 border-transparent hover:border-gray-400 hover:bg-gray-600" do %>
        <%= inline_svg_tag "svg/rocket-launch.svg", class: "size-6" %>
      <% end %>
      <div class="flex flex-col items-center space-y-2">
        <% current_user.organizations.each do |organization| %>
          <%= active_link_to organization_path(organization), class_active: "bg-gray-400", class: "flex items-center space-x-2 text-sm rounded-md border-4 border-transparent hover:border-gray-400 hover:bg-gray-600" do %>
            <%= organization_avatar(organization) %>
          <% end %>
        <% end %>
      </div>
    </div>

    <% if current_organization %>
      <div class="flex flex-col max-h-screen overflow-y-auto p-2 space-y-2">
        <%= render "shared/sidebar_links" %>
      </div>
    <% end %>
  </nav>

  <%# New section at the bottom %>
  <div class="sticky bottom-0 bg-gray-500 text-white hidden">
    <p>Bottom Content</p>
  </div>
</aside>
