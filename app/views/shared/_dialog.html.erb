<dialog class="du-modal" data-dialog-target="dialog" data-action="click->dialog#backdropClick turbo:submit-end->dialog#submitEnd">
  <div class="du-modal-box">
  <button type="button" data-action="dialog#close" class="absolute right-4 top-4 p-0.5 text-gray-400 rounded-md hover:bg-gray-100">
    <%= inline_svg_tag "svg/x-mark.svg", class: "size-6 pointer-events-none" %>
  </button>
    <%= turbo_frame_tag "dialog_content", data: { dialog_target: "content" } %>
  </div>
</dialog>

<template data-dialog-target="loadingTemplate">
  <div class="animate-pulse">
    <div class="flex-1 space-y-6 py-1">
      <div class="h-2 bg-gray-300 rounded w-1/2"></div>
      <div class="space-y-3">
        <div class="grid grid-cols-3 gap-4">
          <div class="h-2 bg-gray-300 rounded col-span-2"></div>
          <div class="h-2 bg-gray-300 rounded col-span-1"></div>
        </div>
        <div class="h-2 bg-gray-300 rounded"></div>
      </div>
    </div>
  </div>
</template>
