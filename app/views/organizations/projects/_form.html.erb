<%= semantic_form_for([ @organization, project ], 
    html: { class: "formtastic space-y-6", data: { controller: "auto-submit", action: "keydown.ctrl+enter->auto-submit#submit keydown.meta+enter->auto-submit#submit" } }) do |form| %>
  
  <%= render "shared/errors", object: form.object %>

  <%= form.inputs "Project Details" do %>
    <%= form.input :name, 
        label: "Project Name",
        hint: "Enter a descriptive name for your project" %>
    
    <%= form.input :description, 
        as: :text,
        label: "Description",
        hint: "Brief description of the project",
        input_html: { rows: 4 } %>
    
    <%= form.input :status, 
        as: :select,
        label: "Status",
        hint: "Current project status",
        collection: [
          ['Active', 'active'],
          ['On Hold', 'on_hold'],
          ['Completed', 'completed'],
          ['Cancelled', 'cancelled']
        ],
        include_blank: 'Select status' %>
  <% end %>

  <%= form.actions do %>
    <%= link_to "Cancel", organization_projects_path(@organization), 
        class: "du-btn du-btn-outline" %>
    <%= form.action :submit, label: "Save Project" %>
  <% end %>
<% end %>
