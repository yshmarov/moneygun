<%= simple_form_for(
      [@organization, project],
      html: { class: "contents space-y-6" },
      data: { controller: "auto-submit", action: "keydown.ctrl+enter->auto-submit#submit keydown.meta+enter->auto-submit#submit" }
    ) do |f| %>
  <%= render "shared/errors", object: f.object %>

  <%= f.input :name,
                 required: true,
                 label: "Project name",
                 placeholder: "If there is a placeholder, the label is hidden by default",
                 character_counter: true,
                 hint: "Text input" %>

  <%= f.input :description,
                 as: :text,
                 label: "Description",
                 character_counter: true,
                 character_counter_limit: 100,
                 autogrow: true,
                 autogrow_max_height: 10,
                 hint: "Textarea for multi-line text input.",
                 input_html: { rows: 4 } %>

  <%= f.input :status,
                 collection: [["Planning", "planning"], ["In Progress", "in_progress"], ["On Hold", "on_hold"], ["Completed", "completed"]],
                 label_method: :first,
                 value_method: :last,
                 label: "Status",
                 hint: "Select dropdown with collection pairs" %>

  <%= f.input :category,
                 collection: ["Web Development", "Mobile App", "Marketing", "Research", "Design", "Other"],
                 include_blank: "Select a category",
                 label: "Category",
                 hint: "Select dropdown with simple array collection" %>

  <%= f.input :priority,
                 as: :radio_buttons,
                 collection: [["Low", "low"], ["Medium", "medium"], ["High", "high"], ["Urgent", "urgent"]],
                 label_method: :first,
                 value_method: :last,
                 label: "Priority",
                 hint: "Radio buttons for single choice" %>

  <%= f.input :start_date,
                 as: :date,
                 html5: true,
                 label: "Start date",
                 hint: "HTML5 date picker" %>

  <%= f.input :scheduled_at,
                 as: :datetime,
                 html5: true,
                 label: "Scheduled at",
                 hint: "HTML5 datetime-local picker" %>

  <%= f.input :budget,
                 as: :numeric,
                 label: "Budget",
                 hint: "Numeric input for decimal values.",
                 input_html: { step: 0.01, min: 0 } %>

  <%= f.input :budget,
                 as: :string,
                 label: "Budget (with autonumeric)",
                 hint: "Text input with autonumeric formatting (form.input example)",
                 input_html: {
                   class: "input w-full",
                   data: {
                     controller: "autonumeric",
                     autonumeric_min_value_value: 0,
                     autonumeric_max_value_value: 999999.99,
                     autonumeric_currency_value: "â‚¬"
                   }
                 } %>

  <div class="form-control">
    <%= f.label :budget, "Budget", class: "label" %>

    <%= f.text_field :budget,
                        required: true,
                        class: "input w-full",
                        data: {
                          controller: "autonumeric",
                          autonumeric_min_value_value: 1,
                          autonumeric_currency_value: "$"
                        } %>

    <div class="text-base-content/70 text-xs mt-1 whitespace-normal break-words w-full">
      Text field with autonumeric formatting (form.text_field example)
    </div>
  </div>

  <%= f.input :is_active,
                 as: :boolean,
                 label: "Active",
                 hint: "Checkbox for boolean values" %>

  <%= f.input :tags,
                 as: :check_boxes,
                 collection: [["Frontend", "frontend"], ["Backend", "backend"], ["Mobile", "mobile"], ["DevOps", "devops"], ["Design", "design"]],
                 label_method: :first,
                 value_method: :last,
                 label: "Tags",
                 hint: "Collection checkboxes for multiple selection" %>

  <%= f.input :document,
                 as: :file,
                 label: "Document",
                 hint: "File input with has_one_attached (single file)" %>

  <%= f.input :attachments,
                 as: :file,
                 input_html: { multiple: true },
                 label: "Attachments",
                 hint: "File input with has_many_attached (multiple files)" %>

  <div class="flex justify-end"><%= f.button :submit %></div>
<% end %>
