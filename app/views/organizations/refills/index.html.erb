<%= render PageComponent.new(title: "Current balance") do |component| %>
  <% component.with_action_list do %>
    <div class="text-lg font-semibold text-gray-900">
      Balance: <span data-controller="animated-number" data-animated-number-start-value="0" data-animated-number-end-value="<%= current_organization.credits %>" data-animated-number-duration-value="300"><%= current_organization.credits %></span>
    </div>
  <% end %>
<% end %>

<br>

<%= render PageComponent.new(title: "Payment details") do |component| %>
  <% component.with_action_list do %>
    <% if @payment_methods.any? %>
      <%= button_to "Manage billing", billing_portal_organization_refills_path(current_organization), method: :post, class: "btn btn-primary", data: { turbo: "false" } %>
    <% else %>
      <%= button_to "Add payment method", add_payment_method_organization_refills_path(current_organization), method: :post, class: "btn btn-primary", data: { turbo: "false" } %>
    <% end %>
  <% end %>

  <% if @payment_methods.any? %>
    <div class="space-y-4">
      <% @payment_methods.each do |payment_method| %>
        <div class="bg-white rounded-lg shadow p-2 border border-gray-200 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-6">
              <div class="flex-shrink-0">
                <div class="h-8 w-12 bg-gray-100 rounded flex items-center justify-center">
                  <span class="text-xs font-medium text-gray-500"><%= payment_method.data["brand"] %></span>
                </div>
              </div>
              <div>
                <div class="flex items-center space-x-2">
                  <p class="font-medium text-gray-900">•••• •••• •••• <%= payment_method.data["last4"] %></p>
                  <% if payment_method.default? %>
                    <span class="px-2 py-0.5 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">Default</span>
                  <% end %>
                </div>
                <p class="text-sm text-gray-500 mt-1">Expires <%= payment_method.data["exp_month"].to_s.rjust(2, '0') %>/<%= payment_method.data["exp_year"] %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 border border-gray-200 text-center">
      No payment methods found
    </div>
  <% end %>
<% end %>

<br>

<%= render PageComponent.new(title: "Top up") do |component| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% UsageCredits.credit_packs.each do |key, credit_pack| %>
      <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow">
        <div class="text-center space-y-4">
          <h3 class="text-xl font-semibold text-gray-900"><%= credit_pack.name.to_s.titleize %></h3>
          
          <%= button_to number_to_currency(credit_pack.price_cents.to_f / 100, unit: credit_pack.price_currency), charge_payment_method_organization_refills_path(current_organization, credit_pack: key), 
              method: :post, 
              class: "btn btn-primary",
              disabled: !@payment_methods.any?,
              data: { turbo: "false" } %>
          
          <div class="space-y-2">
            <p class="text-lg font-medium text-gray-900"><%= credit_pack.credits %> Credits</p>
            <% if credit_pack.bonus_credits > 0 %>
              <p class="text-sm text-green-600">+<%= credit_pack.bonus_credits %> Bonus Credits</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<br>

<%= render PageComponent.new(title: "Auto-top-ups", content_container: true) do |component| %>
  <%= form_with(model: [current_organization, current_organization.wallet], url: update_auto_refill_organization_refills_path(current_organization), method: :patch) do |f| %>
    <%= render "shared/errors", object: f.object %>
    <div class="space-y-6">
      <div class="flex items-center space-x-2">
        <%= f.check_box :auto_refill_enabled, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= f.label :auto_refill_enabled, "Enable auto top-ups", class: "text-sm font-medium text-gray-700" %>
      </div>

      <div class="space-y-2">
        <%= f.label :auto_refill_credit_pack, "Automatically top up", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :auto_refill_credit_pack, UsageCredits.credit_packs.map { |key, pack| [credit_pack_label(pack), key] } %>
      </div>

      <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
        <div class="flex items-center space-x-2">
          <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
          <p class="text-sm text-gray-600">
            Auto-refill will trigger when your balance falls below <span class="font-semibold text-gray-900"><%= UsageCredits::Wallet.auto_refill_threshold.amount %> credits</span>
          </p>
        </div>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>

<br>

<%= render PageComponent.new(title: "Payment history") do |component| %>
  <div class="grid grid-cols-1 gap-6">
    <% @charges.each do |charge| %>
      <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="text-sm text-gray-500 uppercase font-medium">
              <%= charge.data["brand"] %>
            </div>
            <div>
              <p class="font-medium text-gray-900">•••• •••• •••• <%= charge.data["last4"] %></p>
              <p class="text-sm text-gray-500">Expires <%= charge.data["exp_month"] %>/<%= charge.data["exp_year"] %></p>
            </div>
          </div>
          <div class="text-right">
            <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(charge.amount.to_f / 100, unit: charge.currency.upcase) %></p>
            <p class="text-sm text-gray-500"><%= Time.at(charge.created_at).strftime("%B %d, %Y %I:%M %p") %></p>
          </div>
        </div>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex justify-between items-center">
            <div class="space-y-2">
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 rounded-full <%= charge.data["amount_captured"] > 0 ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800" %>">
                  <%= charge.data["amount_captured"] > 0 ? "Succeeded" : "Pending" %>
                </span>
                <%= link_to "Receipt", charge.data["stripe_receipt_url"], target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800" %>
              </div>
              <div class="text-sm text-gray-600">
                <% if charge.metadata.present? %>
                  <p>Credit Pack: <%= charge.metadata["pack_name"]&.titleize %></p>
                  <p>Credits: <%= charge.metadata["credits"] %></p>
                  <% if charge.metadata["bonus_credits"].to_i > 0 %>
                    <p class="text-green-600">+<%= charge.metadata["bonus_credits"] %> Bonus Credits</p>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="text-right text-sm text-gray-500">
              <p>Payment ID: <%= charge.processor_id %></p>
              <p>Payment Method: <%= charge.data["payment_method_type"].titleize %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
