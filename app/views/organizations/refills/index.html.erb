<%= render PageComponent.new(title: "Current balance") do |component| %>
  <% component.with_action_list do %>
    <div class="text-lg font-semibold text-gray-900">
      Balance: <span data-controller="animated-number" data-animated-number-start-value="0" data-animated-number-end-value="<%= current_organization.credits %>" data-animated-number-duration-value="300"><%= current_organization.credits %></span>
    </div>
  <% end %>
<% end %>

<br>

<%= render PageComponent.new(title: "Payment details") do |component| %>
  <% component.with_action_list do %>
    <%= button_to "Add payment method", add_payment_method_organization_refills_path(current_organization), method: :post, class: "btn btn-primary", data: { turbo: "false" } %>
  <% end %>

  <% if @payment_methods.any? %>
    <div class="space-y-4">
      <% @payment_methods.each do |payment_method| %>
        <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="text-sm text-gray-500 uppercase font-medium">
                <%= payment_method.data["brand"] %>
              </div>
              <div>
                <p class="font-medium text-gray-900">•••• •••• •••• <%= payment_method.data["last4"] %></p>
                <p class="text-sm text-gray-500">Expires <%= payment_method.data["exp_month"] %>/<%= payment_method.data["exp_year"] %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 border border-gray-200 text-center">
      No payment methods found
    </div>
  <% end %>
<% end %>

<br>

<%= render "organizations/credits/credit_packs" %>

<br>

<%= render PageComponent.new(title: "Payment history") do |component| %>
  <div class="grid grid-cols-1 gap-6">
    <% @charges.each do |charge| %>
      <div class="bg-white rounded-lg shadow p-4 border border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="text-sm text-gray-500 uppercase font-medium">
              <%= charge.data["brand"] %>
            </div>
            <div>
              <p class="font-medium text-gray-900">•••• •••• •••• <%= charge.data["last4"] %></p>
              <p class="text-sm text-gray-500">Expires <%= charge.data["exp_month"] %>/<%= charge.data["exp_year"] %></p>
            </div>
          </div>
          <div class="text-right">
            <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(charge.amount.to_f / 100, unit: charge.currency.upcase) %></p>
            <p class="text-sm text-gray-500"><%= Time.at(charge.created_at).strftime("%B %d, %Y %I:%M %p") %></p>
          </div>
        </div>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex justify-between items-center">
            <div class="space-y-2">
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 rounded-full <%= charge.data["amount_captured"] > 0 ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800" %>">
                  <%= charge.data["amount_captured"] > 0 ? "Succeeded" : "Pending" %>
                </span>
                <%= link_to "Receipt", charge.data["stripe_receipt_url"], target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800" %>
              </div>
              <div class="text-sm text-gray-600">
                <% if charge.metadata.present? %>
                  <p>Credit Pack: <%= charge.metadata["pack_name"]&.titleize %></p>
                  <p>Credits: <%= charge.metadata["credits"] %></p>
                  <% if charge.metadata["bonus_credits"].to_i > 0 %>
                    <p class="text-green-600">+<%= charge.metadata["bonus_credits"] %> Bonus Credits</p>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="text-right text-sm text-gray-500">
              <p>Payment ID: <%= charge.processor_id %></p>
              <p>Payment Method: <%= charge.data["payment_method_type"].titleize %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
