<%= render "tabs", active_tab: :index %>

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  <%= render PageComponent.new(title: "Spend credits") do |component| %>
    <%= button_to "Spend 25 credits; attempt auto-refill", spend_some_credits_organization_refills_path(Current.organization), method: :patch, class: "du-btn du-btn-primary", data: { turbo: "false" } %>
    <% [0, 10, 20, 50, 100].each do |units| %>
      <%= button_to "Spend 5 + #{units} credits", spend_bulk_credits_organization_refills_path(Current.organization, units: units), method: :patch, disabled: !@organization.has_enough_credits_to?(:spend_bulk_credits, units: units), class: "du-btn du-btn-primary", data: { turbo: "false" } %>
    <% end %>
  <% end %>

  <%= render PageComponent.new(title: "Payment details") do |component| %>
    <% component.with_action_list do %>
      <% if @payment_methods.any? %>
        <%= button_to "Manage billing", billing_portal_organization_refills_path(Current.organization), method: :post, class: "du-btn du-btn-primary", data: { turbo: "false" } %>
      <% else %>
        <%= button_to "Add payment method", add_payment_method_organization_refills_path(Current.organization), method: :post, class: "du-btn du-btn-primary", data: { turbo: "false" } %>
      <% end %>
    <% end %>

    <% if @payment_methods.any? %>
      <div class="space-y-4">
        <% @payment_methods.each do |payment_method| %>
          <div class="rounded-lg shadow p-2 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between space-x-6">
              <div class="h-10 w-auto aspect-video rounded flex items-center justify-center">
                <div class="text-xs font-medium"><%= payment_method.data["brand"] %></div>
              </div>
              <div class="text-right">
                <div class="flex items-center space-x-2">
                  <% if payment_method.default? %>
                    <span class="px-2 py-0.5 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">Default</span>
                  <% end %>
                  <p class="font-medium">•••• •••• •••• <%= payment_method.data["last4"] %></p>
                </div>
                <p class="text-sm mt-1">Expires <%= payment_method.data["exp_month"] %>/<%= payment_method.data["exp_year"] %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <%= render EmptyStateComponent.new(title: "No payment methods found") %>
    <% end %>
  <% end %>

  <%= render PageComponent.new(title: "Top up") do |component| %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% UsageCredits.credit_packs.each do |key, credit_pack| %>

        <div class="rounded-lg shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow">
          <div class="text-center space-y-4">
            <h3 class="text-xl font-semibold"><%= credit_pack.name.to_s.titleize %></h3>
            
            <%= button_to format_credit_price(credit_pack.price_cents), charge_payment_method_organization_refills_path(Current.organization, credit_pack: key), 
                method: :post, 
                class: "du-btn du-btn-primary",
                disabled: !@payment_methods.any?,
                data: { turbo: "false" } %>
            
            <div class="space-y-2">
              <p class="text-lg font-medium"><%= format_credits(credit_pack.credits) %></p>
              <% if credit_pack.bonus_credits > 0 %>
                <p class="text-sm text-green-600">+<%= credit_pack.bonus_credits %> Bonus Credits</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= render PageComponent.new(title: "Auto top-ups") do |component| %>
    <%= form_with(model: [Current.organization, Current.organization.wallet], url: update_auto_refill_organization_refills_path(Current.organization), method: :patch) do |form| %>
      <%= render "shared/errors", object: form.object %>
      <div class="space-y-6">
        <div class="flex items-center space-x-2">
          <%= form.check_box :auto_refill_enabled, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :auto_refill_enabled, "Enable auto top-ups", class: "text-sm font-medium" %>
        </div>

        <div class="space-y-2">
          <%= form.label :auto_refill_credit_pack, "Automatically top up", class: "block text-sm font-medium" %>
          <% if true %>
            <div class="space-y-2">
              <% UsageCredits.credit_packs.each do |key, pack| %>
                <div class="flex items-center">
                  <%= form.radio_button :auto_refill_credit_pack, key, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                  <%= form.label "auto_refill_credit_pack_#{key}", credit_pack_label(pack), class: "ml-2 text-sm font-medium" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <%= form.select :auto_refill_credit_pack, UsageCredits.credit_packs.map { |key, pack| [credit_pack_label(pack), key] } %>
          <% end %>
        </div>

        <div class="rounded-lg p-4 border border-gray-200">
          <div class="flex items-center space-x-2">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            <p class="text-sm">
              Auto-refill will trigger when your balance falls below <span class="font-semibold"><%= UsageCredits.configuration.low_balance_threshold %> credits</span>
            </p>
          </div>
        </div>

        <div class="flex justify-end">
          <%= form.submit "Save", class: "du-btn du-btn-primary", disabled: !@payment_methods.any? %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
