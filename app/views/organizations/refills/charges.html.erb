<%= render "tabs", active_tab: :charges %>

<%= render PageComponent.new(title: "Payment history") do |component| %>
  <div class="grid grid-cols-1 gap-6">
    <% @charges.each do |charge| %>
      <div class="rounded-lg shadow p-4 border border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="text-sm uppercase font-medium">
              <%= charge.data["brand"] %>
            </div>
            <div>
              <p class="font-medium">•••• •••• •••• <%= charge.data["last4"] %></p>
              <p class="text-sm">Expires <%= charge.data["exp_month"] %>/<%= charge.data["exp_year"] %></p>
            </div>
          </div>
          <div class="text-right">
            <p class="text-lg font-semibold"><%= number_to_currency(charge.amount.to_f / 100, unit: charge.currency.upcase) %></p>
            <p class="text-sm"><%= Time.at(charge.created_at).strftime("%B %d, %Y %I:%M %p") %></p>
          </div>
        </div>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex justify-between items-center">
            <div class="space-y-2 flex justify-between w-full">
              <div class="flex items-center space-x-3">
                <span class="px-2 py-1 rounded-full <%= charge.data["amount_captured"] > 0 ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800" %>">
                  <%= charge.data["amount_captured"] > 0 ? "Succeeded" : "Pending" %>
                </span>
                <%= link_to "Receipt", charge.data["stripe_receipt_url"], target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800" %>
              </div>
              <div class="text-sm">
                <% if charge.metadata.present? %>
                  <p>Credit Pack: <%= charge.metadata["pack_name"]&.titleize %></p>
                  <p>Credits: <%= charge.metadata["credits"] %></p>
                  <% if charge.metadata["bonus_credits"].to_i > 0 %>
                    <p class="text-green-600">+<%= charge.metadata["bonus_credits"] %> Bonus Credits</p>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
