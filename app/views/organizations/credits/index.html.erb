<%= render PageComponent.new(title: "Current balance") do |component| %>
  <% component.with_action_list do %>
    <div class="text-lg font-semibold text-gray-900">
      Balance: <span data-controller="animated-number" data-animated-number-start-value="0" data-animated-number-end-value="<%= current_organization.credits %>" data-animated-number-duration-value="300"><%= current_organization.credits %></span>
    </div>
  <% end %>
<% end %>

<br>

<%= render PageComponent.new(title: "Top up") do |component| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% UsageCredits.credit_packs.each do |key, credit_pack| %>
      <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow">
        <div class="text-center space-y-4">
          <h3 class="text-xl font-semibold text-gray-900"><%= credit_pack.name.to_s.titleize %></h3>
          
          <%= button_to number_to_currency(credit_pack.price_cents.to_f / 100, unit: credit_pack.price_currency), organization_credits_path(current_organization, credit_pack_id: key), 
              method: :post, 
              class: "btn btn-primary",
              data: { turbo: "false" } %>
          
          <div class="space-y-2">
            <p class="text-lg font-medium text-gray-900"><%= credit_pack.credits %> Credits</p>
            <% if credit_pack.bonus_credits > 0 %>
              <p class="text-sm text-green-600">+<%= credit_pack.bonus_credits %> Bonus Credits</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<br>

<%= render PageComponent.new(title: "Subscription plans") do |component| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% UsageCredits.subscription_plans.each do |key, subscription_plan| %>
      <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow">
        <div class="text-center space-y-4">
          <div class="flex items-center justify-center space-x-2">
            <h3 class="text-xl font-semibold text-gray-900"><%= subscription_plan.name.to_s.titleize %></h3>
          </div>
          
          <%= button_to number_to_currency(subscription_plan.processor_plan_ids[:stripe].to_f / 100), organization_credits_path(current_organization, subscription_plan_id: key), 
              method: :post, 
              class: "btn btn-primary",
              data: { turbo: "false" } %>
          
          <div class="space-y-2">
            <p class="text-lg font-medium text-gray-900"><%= subscription_plan.credits_per_period %> Credits per <%= subscription_plan.fulfillment_period %></p>
            <% if subscription_plan.trial_credits > 0 %>
              <p class="text-sm text-blue-600">+<%= subscription_plan.trial_credits %> Trial Credits</p>
            <% end %>
            <% if subscription_plan.signup_bonus_credits > 0 %>
              <p class="text-sm text-green-600">+<%= subscription_plan.signup_bonus_credits %> Signup Bonus Credits</p>
            <% end %>
            <% if subscription_plan.rollover_enabled %>
              <p class="text-sm text-blue-600">Credits roll over to next period</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>