<% content_for :title, t("organizations.show.title") %>

<%= render PageComponent.new(full_width: false) do |component| %>
  <%= render "organizations/table", organizations: [@organization] %>
<% end %>

<div
  class="relative w-fit"
  data-controller="dropdown-popover"
  data-dropdown-popover-placement-value="bottom-start top-start"
>
  <button
    class="btn btn-ghost btn-sm btn-circle"
    data-dropdown-popover-target="button"
    data-action="dropdown-popover#toggle"
  >
    <%= inline_svg_tag "svg/ellipsis-vertical.svg", class: "size-4" %>
  </button>

  <dialog
    class="
      absolute z-10 w-max opacity-0 transition-opacity duration-150 ease-out
      outline-hidden [&amp;[open]]:opacity-100
    "
    data-dropdown-popover-target="menu"
    data-action="click@document->dropdown-popover#closeOnClickOutside"
    open
  >
    <ul class="menu rounded-lg border border-base-300 bg-base-100 shadow-md p-1">
      <li>abc</li>
      <li>abc</li>
    </ul>
  </dialog>
</div>
