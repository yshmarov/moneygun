<div id="<%= dom_id membership %>" class="border p-4 rounded-lg flex justify-between items-center">
  <div class="">
    <div class="">
      <%= membership.user.email %>
    </div>
    <div class="">
      <%= membership.role %>
    </div>
  </div>

  <div>
    <%= link_to "Edit", edit_organization_membership_path(membership.organization, membership), class: "btn btn-secondary" if allowed_to?(:update, membership) %>
    <div class="inline-block">
      <%= button_to "Remove", organization_membership_path(membership.organization, membership), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" if allowed_to?(:destroy, membership) %>
    </div>
  </div>
</div>
