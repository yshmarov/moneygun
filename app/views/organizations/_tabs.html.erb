<% tabs = [
     {
       key: :my_organizations,
       path: organizations_path,
       label: t("organizations.index.title")
     },
     {
       key: :browse_organizations,
       path: public_organizations_path,
       label: t("public.organizations.index.title")
     },
     {
       key: :invitations,
       path: user_organizations_received_invitations_path,
       label: t("users.organizations.received_invitations.index.title"),
       badge_count: current_user.received_invitations.pending.count
     },
     {
       key: :requests,
       path: user_organizations_sent_join_requests_path,
       label: t("users.organizations.sent_join_requests.index.title"),
       badge_count: current_user.sent_join_requests.pending.count
     }
   ] %>

<%= render PageComponent.new(title: t("shared.navigation.organizations")) do |component| %>
  <% component.with_action_list do %>
    <%= link_to t("shared.actions.create"), new_organization_path, data: { turbo_frame: :modal }, class: "btn btn-primary" %>
  <% end %>

  <%= render TabsComponent.new(active_tab: active_tab, tabs:) %>
  <br>
<% end %>
