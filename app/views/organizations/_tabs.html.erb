<% tabs = [
     {
       key: :my_organizations,
       path: organizations_path,
       label: t("organizations.index.title"),
       data: { turbo_action: replace_if_native }
     },
     {
       key: :browse_organizations,
       path: public_organizations_path,
       label: t("public.organizations.index.title"),
       data: { turbo_action: replace_if_native }
     },
    {
      key: :invitations,
      path: user_organizations_invitations_path,
      label: t("users.organizations.invitations.index.title"),
      badge_count: current_user.organization_invitations.pending.count,
      data: { turbo_action: replace_if_native }
    },
    {
      key: :requests,
      path: user_organizations_membership_requests_path,
      label: t("users.organizations.membership_requests.index.title"),
      badge_count: current_user.organization_requests.pending.count,
      data: { turbo_action: replace_if_native }
    }
   ] %>

<%= render PageComponent.new(title: t("shared.navigation.organizations"), hide_title_on_native: true) do |component| %>
  <% component.with_action_list do %>
    <%= link_to t("shared.actions.create"), new_organization_path, data: { turbo_frame: :modal, controller: 'bridge--button', bridge_title: t("shared.actions.create"), bridge_ios_image: 'plus.circle' }, class: "btn btn-primary hotwire-native:hidden" %>
  <% end %>

  <%= render TabsComponent.new(active_tab: active_tab, tabs:) %>
  <br>
<% end %>
