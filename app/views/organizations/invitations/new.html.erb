<% content_for :title, t("organizations.memberships.new.title") %>

<%= modal do %>
  <%= render PageComponent.new(title: t("organizations.memberships.new.title")) do |component| %>
    <%= form_with model: @membership_invitation, url: organization_invitations_path(@organization), class: "contents space-y-4" do |form| %>
      <%= render "shared/errors", object: form.object %>

      <div class="">
        <%= form.label :email %>
        <%= form.email_field :email,
                             placeholder: "hello@superails.com",
                             class: "input w-full",
                             autocomplete: "off",
                             autocorrect: "off",
                             autocapitalize: "off",
                             spellcheck: "false",
                             autofocus: !turbo_native_app?,
                             required: true %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Invite", class: "btn btn-primary" %>
      </div>
    <% end %>
  <% end %>
<% end %>
