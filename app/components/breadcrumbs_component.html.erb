<nav class="flex" aria-label="Breadcrumb">
	<ol class="inline-flex items-center">
		<% @segments.each_with_index do |segment, index| %>
		<li class="flex items-center">
				<% if index > 0 %>
				<%= inline_svg_tag "svg/chevron-right.svg", class: "w-3 h-3 text-gray-400 mx-1" %>
				<% end %>
				
				<% if index == @segments.size - 1 %>
				<span class="text-sm font-medium text-gray-500"><%= segment[:name] %></span>
				<% else %>
				<%= link_to segment[:name], segment[:path], class: "text-sm font-medium text-gray-700 hover:text-blue-600" %>
				<% end %>
		</li>
		<% end %>
	</ol>
</nav>
