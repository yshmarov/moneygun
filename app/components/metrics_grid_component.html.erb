<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% processed_metrics.each do |metric| %>
    <div class="du-card du-bg-base-100 du-shadow-xl border border-base-content/20">
      <div class="du-card-body space-y-2">
        <h2 class="du-card-title text-base-content/70 text-sm uppercase tracking-wider"><%= metric[:title] %></h2>
        <p class="text-4xl font-bold text-primary">
          <span data-controller="animated-number" 
                data-animated-number-end-value="<%= metric[:end_value] %>" 
                data-animated-number-type-value="<%= metric[:type] %>"
                <% if metric[:type] == :money %>
                  data-animated-number-currency-value="<%= metric[:currency] || "USD" %>"
                <% end %>>
          </span>
        </p>
        <p class="text-sm text-base-content/60"><%= metric[:subtitle] %></p>
      </div>
    </div>
  <% end %>
</div> 
