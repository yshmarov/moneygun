<section class="space-y-4 mx-auto <%= width_class %>">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl lg:text-3xl">
      <%= title %>
    </h1>
    <div class="whitespace-nowrap">
      <%= action_list %>
    </div>
  </div>

  <% if subtitle %>
    <p class="text-sm text-base-content/60">
      <%= subtitle %>
    </p>
  <% end %>

  <div class="space-y-4">
    <%= content %>
  </div>
</section>
